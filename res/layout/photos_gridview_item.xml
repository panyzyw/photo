<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >
    <ImageView
        android:id="@+id/iv_photos"
        android:layout_width="@dimen/dimen_120_dip"
        android:layout_height="@dimen/dimen_90_dip"
        android:adjustViewBounds="true"
        android:contentDescription="@string/descr_image"
        android:scaleType="centerCrop"
        android:background="@drawable/pictures_no" />
    
    <ImageView
        android:id="@+id/iv_photos_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_93_dip"
        android:layout_marginTop="@dimen/dimen_65_dip"
        android:src="@drawable/selecting" 
        />

</FrameLayout>
